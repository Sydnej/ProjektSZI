<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.65"
            fx:controller="gui.MainController">
    <top>
        <MenuBar>
            <Menu text="Mapa">
                <MenuItem onAction="#handleSelectMap" text="Wybierz mapÄ™"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <AnchorPane>
            <Canvas fx:id="canvas" height="768.0" width="1000.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </center>
    <right>
        <VBox>
            <children>
                <TableView fx:id="fieldsTable">
                    <columns>
                        <TableColumn fx:id="fieldNoColumn" text="Field no"/>
                        <TableColumn fx:id="yieldsColumn" text="Yields"/>
                        <TableColumn fx:id="weedsColumn" text="Weeds"/>
                        <TableColumn fx:id="mineralsColumn" text="Minerals"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <Separator orientation="HORIZONTAL"/>
                <VBox>
                    <Text text="Weather" style="-fx-font-size: 32"/>
                    <Label text="Temperature"/>
                    <Label fx:id="temperatureLabel"/>
                    <Label text="Humidity"/>
                    <Label fx:id="humidityLabel"/>
                    <Label text="Rain"/>
                    <Label fx:id="rainLabel"/>
                </VBox>
            </children>
        </VBox>
    </right>
</BorderPane>
